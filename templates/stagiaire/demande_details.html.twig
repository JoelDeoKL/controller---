{% extends 'template_stage.html.twig' %}

{% block title %} StageManager | Detail Demande {% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-1 text-gray-800">{{ demande.entreprise }}</h1>
        
        <!-- Content Row -->
        <div class="row">
            <div class="card shadow col-lg-12">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Voir plus d'informations sur ma demande de stage Ã  l'entreprise {{ demande.entreprise }}</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h6>Nom de l'entreprise: {{ demande.entreprise }}</h6>
                            <h6>Date debut : {{ demande.dateDebut|date('Y-m-d') }}</h6>
                            <h6>Date fin : {{ demande.dateFin|date('Y-m-d') }}</h6>
                            <h6>Duree : {{ demande.duree }}</h6>
                            <h6>type de stage : {{ demande.type }}</h6>
                            <h6>Observation : {{ demande.observation }}</h6>
                            <h6>Date de la soumission : {{ demande.dateDemande|date('Y-m-d') }}</h6>
                            <h6>Etat de la demande : {{ demande.etat }}</h6>
                        </div>
                       
                    </div>
                </div>
                <div class="card-body">
                    <h6>
                        <a href="" class="btn btn-primary">Voir les departements</a>
                        <a href="{{ path("editer_demande", {id: demande.id}) }}" class="btn btn-primary">Postuler</a>
                    </h6>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


  {% endblock %}
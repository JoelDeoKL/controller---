{% extends 'template_stage.html.twig' %}

{% block title %} StageManager | Detail Entreprise {% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-1 text-gray-800">{{ entreprise.nomEntreprise }}</h1>
        
        <!-- Content Row -->
        <div class="row">
            <div class="card shadow col-lg-12">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Details sur les informations concernant l'entreprise {{ entreprise.nomEntreprise }}</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h6>Nom de l'entreprise: {{ entreprise.nomEntreprise }}</h6>
                            <h6>Description : {{ entreprise.descriptionEntreprise }}</h6>
                            <h6>Adresse : {{ entreprise.adresseEntreprise }}</h6>
                            <h6>Téléphone : {{ entreprise.telephone }}</h6>
                            <h6>L'état de l'entreprise : {{ entreprise.etatEntreprise }}</h6>
                            <h6>Secteur : {{ entreprise.secteurEntreprise }}</h6>
                            <h6>Email de l'entreprise : {{ entreprise.emailEntreprise }} </h6>
                            <h6>Téléphone de l'entreprise : {{ entreprise.telephone }} </h6>
                            <h6>Nombre des places admissible : {{ entreprise.nombrePlace }} </h6>
                            <h6>Date de création : {{ entreprise.dateCreation|date('Y-m-d') }}</h6>
                        </div>
                        <div class="col-lg-12">
                            <h6>Logo : <img width="270" src="{{ asset('uploads/images/') }}{{ entreprise.logo }}" alt="user image"></h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6>
                        <a href="" class="btn btn-primary">Voir les departements</a>
                        <a href="{{ path("editer_demande", {id: entreprise.id}) }}" class="btn btn-primary">Postuler</a>
                    </h6>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


  {% endblock %}
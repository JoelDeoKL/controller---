{% extends 'template_stage.html.twig' %}

{% block title %} EspaceStage | Editer Tache {% endblock %}

{% block body %}
              
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Editer une tache</h1>
            </div>

            <!-- Content Row -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 style='text-align:center'>Formulaire d'Ã©dition d'une tache</h1>
                    {{ form_start(form) }}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.nom) }}
                                        {{ form_widget(form.nom, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'Classification des documents'
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.description_tache) }}
                                        {{ form_widget(form.description_tache, {'attr': {
                                            'class':'required form-control',
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.etat) }}
                                        {{ form_widget(form.etat, {'attr': {
                                            'class':'required form-control'
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        {{ form_label(form.departement) }}
                                        {{ form_widget(form.departement, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'Informatique'
                                        }}) }}
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        {{ form_label(form.entreprise) }}
                                        {{ form_widget(form.entreprise, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'Informatique'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.etudiant) }}
                                        {{ form_widget(form.etudiant, {'attr': {
                                            'class':'required form-control',
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.date_creation) }}
                                        {{ form_widget(form.date_creation, {'attr': {
                                            'class':'required form-control',
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="card-footer"> 
                        {{ form_widget(form.editer, {'attr': {'class':'btn btn-primary'}}) }}
                    </div>
                </div>
            </div>

            <!-- Content Row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

  {% endblock %}
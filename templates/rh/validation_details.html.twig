{% extends 'template_rh.html.twig' %}

{% block title %} StageManager | Detail Validation {% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-1 text-gray-800">{{ validation.etudiant }}</h1>
        
        <!-- Content Row -->
        <div class="row">
            <div class="card shadow col-lg-12">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Details sur les informations concernant la validation de stage de {{ validation.etudiant }}</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h6>Nom de l'etudiant: {{ validation.etudiant }}</h6>
                            <h6>Date de debut : {{ validation.dateDebut|date('Y-m-d') }}</h6>
                            <h6>Date de la fin : {{ validation.dateFin|date('Y-m-d') }}</h6>
                            <h6>Dur√©e : {{ validation.duree }}</h6>
                            <h6>Type de stage : {{ validation.type }}</h6>
                            <h6>Observation : {{ validation.observation }}</h6>
                            <h6>Date de validation : {{ validation.dateValidation|date('Y-m-d') }} </h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6>
                        <a href="" class="btn btn-primary">Voir les departements</a>
                        <a href="{{ path("delete_validation", {id: validation.id}) }}" class="btn btn-primary">Supprimer</a>
                    </h6>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


  {% endblock %}
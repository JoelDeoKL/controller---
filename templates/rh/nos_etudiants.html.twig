{% extends 'template_rh.html.twig' %}

{% block title %} StageManager | Dashbord {% endblock %}

{% block body %}
              
        <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Liste tous les Ã©tudiants stagiaires qui sont chez nous</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Etudiants</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Noms</th>
                                            <th>Date de debut</th>
                                            <th>Date de fin</th>
                                            <th>Duree</th>
                                            <th>Type de stage</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for validation in validations %}
                                            <tr>
                                                <td>{{ validation.etudiant }}</td>
                                                <td>{{ validation.dateDebut|date('Y-m-d') }}</td>
                                                <td>{{ validation.dateFin|date('Y-m-d') }}</td>
                                                <td>{{ validation.duree }}</td>
                                                <td>{{ validation.type }}</td>
                                                <td>
                                                    <a href="{{ path("details_validation", {id: validation.id}) }}" class="btn btn-primary">Voir</a>
                                                    <a href="{{ path("valider_stage", {id: validation.id}) }}" class="btn btn-primary">Modifier</a>
                                                    <a href="{{ path("delete_validation", {id: validation.id}) }}" class="btn btn-primary">Supprimer</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->


  {% endblock %}
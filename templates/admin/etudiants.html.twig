{% extends 'template_dash.html.twig' %}

{% block title %} StageManager | Dashbord {% endblock %}

{% block body %}
              
        <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Liste tous les Ã©tudiants stagiaires inscrits sur la plateforme</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Etudiants</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Postnom</th>
                                            <th>Prenom</th>
                                            <th>Email</th>
                                            <th>Promotion</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for etudiant in etudiants %}
                                            <tr>
                                                <td>{{ etudiant.nom }}</td>
                                                <td>{{ etudiant.postnom }}</td>
                                                <td>{{ etudiant.prenom }}</td>
                                                <td>{{ etudiant.emailEtudiant }}</td>
                                                <td>{{ etudiant.promotion }}</td>
                                                <td>
                                                    <a href="{{ path("detail_etudiant", {id: etudiant.id}) }}" class="btn btn-primary">Voir</a>
                                                    <a href="{{ path("editer_etudiant", {id: etudiant.id}) }}" class="btn btn-primary">Modifier</a>
                                                    <a href="{{ path("delete_etudiant", {id: etudiant.id}) }}" class="btn btn-primary">Supprimer</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->


  {% endblock %}
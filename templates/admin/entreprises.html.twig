{% extends 'template_dash.html.twig' %}

{% block title %} StageManager | Dashbord {% endblock %}

{% block body %}
              
        <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Liste tous les entreprises partenaire en matière de stage</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Entreprise</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Description</th>
                                            <th>Secteur</th>
                                            <th>Nombre de place</th>
                                            <th>Numéro de tel</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entreprise in entreprises %}
                                            <tr>
                                                <td>{{ entreprise.nom_entreprise }}</td>
                                                <td>{{ entreprise.description_entreprise }}</td>
                                                <td>{{ entreprise.secteur_entreprise }}</td>
                                                <td>{{ entreprise.nombre_place }}</td>
                                                <td>{{ entreprise.telephone }}</td>
                                                <td>
                                                    <a href="{{ path("entreprise_detail", {id: entreprise.id}) }}" class="btn btn-primary">Voir</a>
                                                    <a href="{{ path("edit_entreprise", {id: entreprise.id}) }}" class="btn btn-primary">Modifier</a>
                                                    <a href="{{ path("delete_entreprise", {id: entreprise.id}) }}" class="btn btn-primary">Supprimer</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->


  {% endblock %}
{% extends 'template_dash.html.twig' %}

{% block title %} StageManager | Dashbord {% endblock %}

{% block body %}
              
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Liste tous les entreprises en attente d'une validation</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Entreprise</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Secteur</th>
                                <th>Nombre de place</th>
                                <th>Num√©ro de tel</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entreprise in entreprises %}
                                <tr>
                                    <td>{{ entreprise.nomEntreprise }}</td>
                                    <td>{{ entreprise.descriptionEntreprise }}</td>
                                    <td>{{ entreprise.secteurEntreprise }}</td>
                                    <td>{{ entreprise.nombrePlace }}</td>
                                    <td>{{ entreprise.telephoneEntreprise }}</td>
                                    <td>
                                        <a href="{{ path("detail_entreprise", {id: entreprise.id}) }}" class="btn btn-primary">Voir</a>
                                        <a href="{{ path("accepter_entreprise", {id: entreprise.id}) }}" class="btn btn-primary">Accepter</a>
                                        <a href="{{ path("delete_entreprise", {id: entreprise.id}) }}" class="btn btn-primary">Refuser</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


  {% endblock %}
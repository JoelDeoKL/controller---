{% extends 'template_dash.html.twig' %}

{% block title %} StageManager | Detail Validation {% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-1 text-gray-800">{{ cote.etudiant }}</h1>
        
        <!-- Content Row -->
        <div class="row">
            <div class="card shadow col-lg-12">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Details sur les informations concernant la cotation du stage de {{ cote.etudiant }}</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h6>Nom de l'etudiant: {{ cote.etudiant }}</h6>
                            <h6>Promotion : {{ cote.promotion }}</h6>
                            <h6>Cote : {{ cote.cote }}/10</h6>
                            <h6>Provenance : {{ cote.provenance }}</h6>
                            <h6>Date de cotation : {{ cote.dateCotation|date('Y-m-d') }} </h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6>
                        <a href="{{ path("delete_cote", {id: cote.id}) }}" class="btn btn-primary">Supprimer</a>
                    </h6>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


  {% endblock %}
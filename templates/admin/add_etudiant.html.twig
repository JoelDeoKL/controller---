{% extends 'template_dash.html.twig' %}

{% block title %} EspaceStage | Ajouter Entreprise {% endblock %}

{% block body %}
              
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Ajouter un Ã©tudiant en tant que stagiaire</h1>
            </div>

            <!-- Content Row -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 style='text-align:center'>Formulaire d'ajout d'un stagiaire</h1>
                    {{ form_start(form) }}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.nom) }}
                                        {{ form_widget(form.nom, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'KALONJI'
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.postnom) }}
                                        {{ form_widget(form.postnom, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'KASONGO'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.prenom) }}
                                        {{ form_widget(form.prenom, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'Eric'
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'email@gmail.com'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.password) }}
                                        {{ form_widget(form.password, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'*********'
                                        }}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.promotion) }}
                                        {{ form_widget(form.promotion, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'L4 MSI'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.telephone_etudiant) }}
                                        {{ form_widget(form.telephone_etudiant, {'attr': {
                                            'class':'required form-control',
                                            'placeholder':'0999563455'
                                        }}) }}
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        {{ form_label(form.date_creation) }}
                                        {{ form_widget(form.date_creation, {'attr': {
                                            'class':'required form-control',
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="card-footer"> 
                        {{ form_widget(form.editer, {'attr': {'class':'btn btn-primary'}}) }}
                    </div>
                </div>
            </div>

            <!-- Content Row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

  {% endblock %}